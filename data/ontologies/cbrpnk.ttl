cbrpnk:Cyberdeck         a rpg:Item ; rpg:name "Cyberdeck"           ; cbrpnk:loadCost 1 ; rpg:itemDefinedInRuleSet cbrpnk:CBRplusPNK .
cbrpnk:SmallDrone        a rpg:Item ; rpg:name "Small Drone"         ; cbrpnk:loadCost 1 ; schema:description "STEALTHY or SWIFT." ; rpg:itemDefinedInRuleSet cbrpnk:CBRplusPNK .
