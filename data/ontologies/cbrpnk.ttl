@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:      <http://www.w3.org/2002/07/owl#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .
@prefix schema:   <https://schema.org/> .
@prefix skos:     <http://www.w3.org/2004/02/skos/core#> .
@prefix dc:       <http://purl.org/dc/elements/1.1/> .
@prefix rpg:     <http://www.rpg-schema.org/1.0/> .
@prefix fitd:   <https://fitd.rpg-schema.org/ontology#> .
@prefix cbrpnk:   <https://cbrpnk.rpg-schema.org/ontology#> .

# =============================================================================
#  ONTOLOGY DECLARATION
# =============================================================================

cbrpnk: a owl:Ontology ;
    rdfs:label "CBR+PNK Schema" ;
    dc:description """Ontology for CBR+PNK (Cabinetofcuriosities.games / MYTHWORKS),
    a Forged in the Dark one-shot cyberpunk RPG. Derived from rpg: and fitd: base ontologies.
    CBR+PNK is based on Blades in the Dark by John Harper (CC BY 3.0).""" ;
    dc:creator "Emanoel Melo" ;
    dc:publisher "MYTHWORKS" ;
    owl:versionInfo "1.5" ;
    schema:license <https://creativecommons.org/licenses/by/3.0/> ;
    owl:imports <https://rpg-schema.org/ns/rpg> ;
    owl:imports <https://rpg-schema.org/ns/fitd> .


# =============================================================================
#  RULESET DECLARATION
# =============================================================================

cbrpnk:CBRplusPNK
    a rpg:RuleSet ;
    rpg:name "CBR+PNK" ;
    schema:description "A Forged in the Dark game for one-shot sessions of cinematic cyberpunk action." ;
    rpg:author [ a schema:Person ; schema:name "Emanoel Melo" ] ;
    rpg:publisher [ a schema:Organization ; schema:name "MYTHWORKS" ] ;
    rpg:extendsRuleSet cbrpnk:BladesInTheDark ;
    rpg:ruleSetType cbrpnk:HackRuleSetType .

# Alias: cbrpnk:BladesInTheDark IS fitd:FITDRuleSet — owl:sameAs for cross-namespace compatibility.
# Consumers using cbrpnk: can reference cbrpnk:BladesInTheDark; reasoners will unify with fitd:FITDRuleSet.
cbrpnk:BladesInTheDark
    a rpg:RuleSet ;
    owl:sameAs fitd:FITDRuleSet ;
    rpg:name "Blades in the Dark" ;
    schema:description "The base Forged in the Dark game by John Harper. Declared as owl:sameAs fitd:FITDRuleSet." ;
    rpg:author [ a schema:Person ; schema:name "John Harper" ] .

cbrpnk:HackRuleSetType
    a rpg:RuleSetType ;
    schema:name "Hack" ;
    schema:description "A ruleset that modifies and extends an existing base ruleset." .


# =============================================================================
#  SETTING CONCEPTS
# =============================================================================

cbrpnk:TheSprawl
    a rpg:World ;
    rpg:name "The Sprawl" ;
    schema:description """An overcrowded megacity consumed by high tech, class struggle, 
    intrusive advertising, corporatocracy, automated services, climate crash.""" ;
    rpg:worldUsesRuleSet cbrpnk:CBRplusPNK .

cbrpnk:TheGrid
    a owl:Class ;
    rdfs:subClassOf rpg:World ;
    rpg:name "The Grid" ;
    schema:description """Global network of servers through which data flows. Surface level: 
    public records, media streams. Sensitive data protected by ICP. 
    Megacorp private servers accessible only from secured terminals.""" .


# =============================================================================
#  CLASSES — RUNNER (Player Character)
# =============================================================================

cbrpnk:Runner
    a owl:Class ;
    rdfs:subClassOf rpg:Character ;
    rdfs:label "Runner" ;
    schema:description """A Player Character in CBR+PNK: a merc, criminal, or rebel 
    living on the edge, going on their LAST RUN.""" .

#  ---- Approach (0-2 dice, one of four) ----

cbrpnk:Approach
    a owl:Class ;
    rdfs:subClassOf rpg:RuleSetAttribute ;
    rdfs:label "Approach" ;
    schema:description """One of four Approaches that provide 0-2 dice to an Action Roll.
    Each Approach has a Glitch condition that activates on Overload.""" ;
    rpg:definedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:Aggressive
    a cbrpnk:Approach ;
    rpg:name "Aggressive" ;
    rpg:termCode "AGG" ;
    schema:description "Force, Intimidation, Destruction." ;
    cbrpnk:glitchCondition "Hesitation" .

cbrpnk:Smart
    a cbrpnk:Approach ;
    rpg:name "Smart" ;
    rpg:termCode "SMT" ;
    schema:description "Creativity, Cunning, Perception." ;
    cbrpnk:glitchCondition "Disorientation" .

cbrpnk:Empathic
    a cbrpnk:Approach ;
    rpg:name "Empathic" ;
    rpg:termCode "EMP" ;
    schema:description "Charisma, Leadership, Diplomacy." ;
    cbrpnk:glitchCondition "Apathy" .

cbrpnk:Stealthy
    a cbrpnk:Approach ;
    rpg:name "Stealthy" ;
    rpg:termCode "STL" ;
    schema:description "Discretion, Subterfuge, Secrecy." ;
    cbrpnk:glitchCondition "Recklessness" .

#  ---- Skill (0-2 dice, with optional Expertise) ----

cbrpnk:Skill
    a owl:Class ;
    rdfs:subClassOf rpg:Proficiency ;
    rdfs:label "Skill" ;
    schema:description """A Skill provides 0-2 dice to an Action Roll.
    An Expertise (spending a 3rd die on a skill) allows trading 1 die for an Edge.""" ;
    rpg:definedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:Analyze    a cbrpnk:Skill ; rpg:name "Analyze"    ; schema:description "People, Situation, Information." .
cbrpnk:Athletics  a cbrpnk:Skill ; rpg:name "Athletics"  ; schema:description "Sprint, Parkour, Swim, Climb." .
cbrpnk:CloseCombat a cbrpnk:Skill ; rpg:name "Close Combat" ; schema:description "Brawling, Weapon." .
cbrpnk:Coding     a cbrpnk:Skill ; rpg:name "Coding"     ; schema:description "Hack, Compile, Mine, Scramble." .
cbrpnk:Influence  a cbrpnk:Skill ; rpg:name "Influence"  ; schema:description "Perform, Negotiate, Intimidate." .
cbrpnk:Piloting   a cbrpnk:Skill ; rpg:name "Piloting"   ; schema:description "Cars, Bikes, Choppers, Drones." .
cbrpnk:RangedCombat a cbrpnk:Skill ; rpg:name "Ranged Combat" ; schema:description "Pistol, Rifle, SMG, Throwing." .
cbrpnk:Rigging    a cbrpnk:Skill ; rpg:name "Rigging"    ; schema:description "Electronics, Robotics, Heavy Machinery." .
cbrpnk:Sciences   a cbrpnk:Skill ; rpg:name "Sciences"   ; schema:description "Biotech, Physics, Chemistry." .
cbrpnk:Streetwise a cbrpnk:Skill ; rpg:name "Streetwise" ; schema:description "Politics, Market, Navigation." .
cbrpnk:Attune     a cbrpnk:Skill ; rpg:name "Attune"     ; schema:description "Spirits, Artifacts, Places. Requires +Weird plugin." .

#  ---- Augmentation ----

cbrpnk:Augmentation
    a owl:Class ;
    rdfs:subClassOf rpg:Item ;
    rdfs:label "Augmentation" ;
    schema:description """A body modification (Cybernetics, Biotech, or other). 
    Activating costs 1 Stress (or SPECIAL RESISTANCE for defensive use).
    Each Runner has a Signature Augmentation; additional ones can be declared via Upgrades.""" .

#  ---- Angle ----

cbrpnk:Angle
    a owl:Class ;
    rdfs:subClassOf rpg:IdentityStatement ;
    rdfs:label "Angle" ;
    schema:description "What the Runner ultimately runs for. Used in the Angle Roll epilogue." .

cbrpnk:GetOut       a cbrpnk:Angle ; rpg:name "Get Out"       .
cbrpnk:MakeThemPay  a cbrpnk:Angle ; rpg:name "Make Them Pay" .
cbrpnk:LookAfterThem a cbrpnk:Angle ; rpg:name "Look After Them" .
cbrpnk:UpgradeLife  a cbrpnk:Angle ; rpg:name "Upgrade Life"  .
cbrpnk:LearnTheTruth a cbrpnk:Angle ; rpg:name "Learn the Truth" .
cbrpnk:TakeAStand   a cbrpnk:Angle ; rpg:name "Take a Stand"  .


# =============================================================================
#  PROPERTIES — RUNNER-SPECIFIC
# =============================================================================

cbrpnk:glitchCondition
    a owl:DatatypeProperty ;
    rdfs:domain cbrpnk:Approach ;
    rdfs:range xsd:string ;
    rdfs:label "glitch condition" ;
    schema:description "The narrative condition that manifests when this Approach becomes Glitched." .

cbrpnk:isGlitched
    a owl:DatatypeProperty ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:boolean ;
    rdfs:label "is glitched" ;
    schema:description """True when an Approach, Gear, or Augmentation is GLITCHED.
    A Glitched factor replaces a normal die with a Glitch Die on Action Rolls.
    On Glitch Die 1-3: Level 2 Consequence that cannot be Resisted.
    On Glitch Die 4/5: Consequence can be Resisted normally.""" .

cbrpnk:isHunted
    a owl:DatatypeProperty ;
    rdfs:domain cbrpnk:Runner ;
    rdfs:range xsd:boolean ;
    rdfs:label "is hunted" ;
    schema:description "True if the Runner has the HUNTED status (e.g., from unpaid Assets)." .

cbrpnk:handle
    a owl:DatatypeProperty ;
    rdfs:subPropertyOf rpg:name ;
    rdfs:domain cbrpnk:Runner ;
    rdfs:range xsd:string ;
    rdfs:label "handle" ;
    schema:description "Street name / Grid alias of the Runner." .

cbrpnk:hasAngle
    a owl:ObjectProperty ;
    rdfs:domain cbrpnk:Runner ;
    rdfs:range cbrpnk:Angle ;
    rdfs:label "has angle" .

cbrpnk:hasSignatureAugmentation
    a owl:ObjectProperty ;
    rdfs:domain cbrpnk:Runner ;
    rdfs:range cbrpnk:Augmentation ;
    rdfs:label "has signature augmentation" .

cbrpnk:stressCostToActivate
    a owl:DatatypeProperty ;
    rdfs:domain cbrpnk:Augmentation ;
    rdfs:range xsd:integer ;
    rdfs:label "stress cost to activate" ;
    schema:description "Stress cost to activate an Augmentation's enhanced capability (default: 1)." .

cbrpnk:hasSpecialResistance
    a owl:DatatypeProperty ;
    rdfs:domain cbrpnk:Augmentation ;
    rdfs:range xsd:boolean ;
    rdfs:label "has special resistance" ;
    schema:description "True if this Augmentation can be invoked as a SPECIAL RESISTANCE against fitting Consequences." .


# =============================================================================
#  TRACKERS
# =============================================================================

cbrpnk:StressTracker
    a rpg:Tracker ;
    rpg:name "Stress" ;
    rpg:termCode "STRESS" ;
    schema:description "7-segment stress track. Push=2, Assist=1, Flashback=1-2+. On last segment: OVERLOAD." ;
    cbrpnk:maxSegments 7 ;
    rpg:trackerDefinedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:DebtTracker
    a rpg:Tracker ;
    rpg:name "Debt" ;
    rpg:termCode "DEBT" ;
    schema:description "0-3 Debt marks. Each marked Debt gives -1D on the Angle Roll." ;
    cbrpnk:maxSegments 3 ;
    rpg:trackerDefinedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:CredTracker
    a rpg:Tracker ;
    rpg:name "Cred" ;
    rpg:termCode "CRED" ;
    schema:description "0-3 Cred marks. Each marked Cred gives +1D on the Angle Roll." ;
    cbrpnk:maxSegments 3 ;
    rpg:trackerDefinedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:maxSegments
    a owl:DatatypeProperty ;
    rdfs:domain rpg:Tracker ;
    rdfs:range xsd:integer ;
    rdfs:label "max segments" .

#  ---- Harm ----

cbrpnk:HarmState
    a owl:Class ;
    rdfs:subClassOf rpg:Harm ;
    rdfs:label "Harm" ;
    schema:description """Harm has 4 levels. Overflow moves to next level.
    L1: Reduced Effect penalty; L2: -1 die; L3: OUT (act only if Assisted or Pushed); L4: Time to Die.""" .

cbrpnk:HarmLevel1 a cbrpnk:HarmState ; rpg:name "Level 1 Harm" ; schema:description "Superficial: Dazed, Bleeding, Battered, Confused, Lagging. Penalty: Reduced Effect." ; rpg:valueNumber 1 .
cbrpnk:HarmLevel2 a cbrpnk:HarmState ; rpg:name "Level 2 Harm" ; schema:description "Serious: Sensory Deprived, Deeply Cut, Drained, Panicking, Concussed. Penalty: -1 die." ; rpg:valueNumber 2 .
cbrpnk:HarmLevel3 a cbrpnk:HarmState ; rpg:name "Level 3 Harm" ; schema:description "Incapacitating: Impaled, Broken Bones, Burned, Terrified. Penalty: OUT." ; rpg:valueNumber 3 .
cbrpnk:HarmLevel4 a cbrpnk:HarmState ; rpg:name "Level 4 Harm" ; schema:description "Lethal: Vital Organ, Loss of Limb, Core Wiped. FATAL if not Resisted." ; rpg:valueNumber 4 .


# =============================================================================
#  ROLLS
# =============================================================================

#  ---- Resolution Model ----

cbrpnk:DicePoolHighest
    a rpg:DicePoolModel ;
    rpg:name "Dice Pool — Read Highest" ;
    schema:description "Roll N d6s. Read the single highest result. 6+6=Critical, 6=Success, 4-5=Partial, 1-3=Failure." .

#  ---- Action Roll ----

cbrpnk:ActionRoll
    a owl:Class ;
    rdfs:subClassOf fitd:ActionRoll, rpg:Roll ;
    rdfs:label "Action Roll" ;
    schema:description """Core resolution: pool = Approach + Skill ± modifiers.
    Zero or fewer dice: roll 2d6 keep lowest.
    Critical (6,6): success + extra benefit.
    6: success. 4-5: partial + Consequence. 1-3: failure + Consequence.
    Glitch dice replace normal dice; read separately after main result.""" ;
    rpg:rollExpression "Nd6 keep-highest; 6+6=Critical, 6=Success, 4/5=Partial+Consequence, 1-3=Failure+Consequence" ;
    rpg:usesResolutionModel cbrpnk:DicePoolHighest ;
    rpg:rollDefinedInRuleSet cbrpnk:CBRplusPNK .

#  ---- Angle Roll ----

cbrpnk:AngleRoll
    a owl:Class ;
    rdfs:subClassOf rpg:Roll ;
    rdfs:label "Angle Roll" ;
    schema:description """Epilogue roll. Dice = Approach for chosen angle approach.
    -1D if Approach is Glitched (no Glitch dice added).
    -1D per marked Debt. -1D if critical requirement failed; -2D if mission abandoned.
    +1D per marked Cred. Zero or fewer: roll 2d6 keep lowest.
    6+6: remarkable success, can improve another's result.
    6: success but hollow. 4-5: partial, prepare for cost. 1-3: failure.""" ;
    rpg:rollExpression "Nd6 keep-highest; modifiers from Debt/Cred/Glitch/mission outcome" ;
    rpg:usesResolutionModel cbrpnk:DicePoolHighest ;
    rpg:rollDefinedInRuleSet cbrpnk:CBRplusPNK .

#  ---- Resistance Roll ----

cbrpnk:ResistanceRoll
    a owl:Class ;
    rdfs:subClassOf fitd:ResistanceRoll, rpg:Roll ;
    rdfs:label "Resistance Roll" ;
    schema:description """Resist a Consequence. Pool = chosen Approach only (no Skill).
    +1D if depleting relevant Gear.
    Alternatively: deplete SPECIAL RESISTANCE or ARMOR instead of rolling.
    6+6: avoid entirely. 6: mark 1 Stress. 4/5: mark 2 Stress. 1-3: mark 3 Stress.""" ;
    rpg:rollExpression "Approach dice only; +1D for relevant Gear depletion" ;
    rpg:usesResolutionModel cbrpnk:DicePoolHighest ;
    rpg:rollDefinedInRuleSet cbrpnk:CBRplusPNK .

#  ---- Take a Breather Roll ----

cbrpnk:TakeABreatherRoll
    a owl:Class ;
    rdfs:subClassOf rpg:Roll ;
    rdfs:label "Take a Breather Roll" ;
    schema:description """Recover Stress or ignore Harm penalties mid-run.
    Pool = chosen Approach (no Skill). +1D if Angle is invoked. +1D if depleting appropriate Gear.
    6+6: clear all Stress OR ignore L1+L2 Harm for rest of Run.
    6: clear 3 Stress OR ignore L1 or L2 Harm.
    4/5: clear 2 Stress OR ignore L1 Harm.
    1-3: clear 1 Stress.""" ;
    rpg:rollExpression "Approach only; +1D Angle, +1D Gear depletion" ;
    rpg:usesResolutionModel cbrpnk:DicePoolHighest ;
    rpg:rollDefinedInRuleSet cbrpnk:CBRplusPNK .


# =============================================================================
#  FICTION KNOBS — THREAT & EFFECT
# =============================================================================

cbrpnk:ThreatLevel
    a rpg:RiskPosition ;
    rpg:name "Threat Level" ;
    rpg:termCode "T" ;
    schema:description "1-4 scale. Default 2. Informs danger and severity of Consequences on partial/failure." ;
    rpg:definedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:EffectLevel
    a rpg:EffectLevel ;
    rpg:name "Effect Level" ;
    rpg:termCode "E" ;
    schema:description "1-4 scale. Default 2. Gauges how much is accomplished on success." ;
    rpg:definedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:Edge
    a rpg:FictionKnob ;
    rpg:name "Edge" ;
    schema:description """Situational advantage from gear, tactics, environment, or opposition weakness.
    Opposition Edge → Increase Threat or Reduce Effect.
    Runner Edge → Reduce Threat or Increase Effect.
    Using an Expertise: trade a die for an Edge.""" ;
    rpg:definedInRuleSet cbrpnk:CBRplusPNK .


# =============================================================================
#  ROLL MODIFIERS
# =============================================================================

cbrpnk:Push
    a rpg:RollModifier ;
    rpg:name "Push" ;
    schema:description "Mark 1 Stress OR add a Glitch Die. Effect: +1D, OR Increase Effect, OR act when OUT." ;
    rpg:definedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:Assist
    a rpg:RollModifier ;
    rpg:name "Assist" ;
    schema:description "Teammate marks 1 Stress and exposes themselves to Consequences. Effect: +1D to target's roll. Only one PC may Assist any given roll." ;
    rpg:definedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:GlitchDie
    a rpg:RollModifier ;
    rpg:name "Glitch Die" ;
    schema:description "Replaces a normal die. Read separately after main result: 1-3 = Level 2 unresistable Consequence; 4/5 = resistable Consequence." ;
    rpg:definedInRuleSet cbrpnk:CBRplusPNK .


# =============================================================================
#  CONSEQUENCES
# =============================================================================

cbrpnk:ReducedEffect
    a rpg:Consequence ;
    rpg:name "Reduced Effect" ;
    schema:description "Action falls short. Mark 1 less Progress Track segment, reach only halfway, partial result." ;
    rpg:consequenceSeverity 1 ;
    rpg:consequenceDefinedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:HarmConsequence
    a rpg:Consequence ;
    rpg:name "Harm" ;
    schema:description "Lasting condition or injury. Requires time or treatment to recover. Level determined by Threat Level." ;
    rpg:consequenceDefinedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:Complication
    a rpg:Consequence ;
    rpg:name "Complication" ;
    schema:description "Introduces trouble: compromise assets, deplete resources, start/advance a Progress Track, environmental escalation." ;
    rpg:consequenceDefinedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:ThreatEscalation
    a rpg:Consequence ;
    rpg:name "Threat Escalation" ;
    schema:description "Runner loses control. Remove an Edge or safeguard; Threat increases." ;
    rpg:consequenceDefinedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:LostOpportunity
    a rpg:Consequence ;
    rpg:name "Lost Opportunity" ;
    schema:description "Circumstances shift; must find new approach. Use exclusively on Failure." ;
    rpg:consequenceDefinedInRuleSet cbrpnk:CBRplusPNK .


# =============================================================================
#  SPECIAL ACTIONS
# =============================================================================

cbrpnk:SetupAction
    a rpg:SpecialAbility ;
    rpg:name "Setup" ;
    schema:description "Make an Action Roll to give an Edge to yours or anyone else's future Actions." ;
    rpg:capabilityDefinedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:LeadGroup
    a rpg:SpecialAbility ;
    rpg:name "Lead Group" ;
    schema:description "All participating PCs roll same Action, pick best result. All share outcome; leader marks 1 Stress per Failure." ;
    rpg:capabilityDefinedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:Protect
    a rpg:SpecialAbility ;
    rpg:name "Protect" ;
    schema:description "Take or Resist a Consequence in place of a teammate." ;
    rpg:capabilityDefinedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:FlashbackAction
    a owl:Class ;
    rdfs:subClassOf fitd:Flashback ;
    rdfs:label "Flashback" ;
    schema:description """Declare past action to impact current situation (cannot undo established fiction).
    Stress cost: 1 = standard activity; 2+ = elaborate/unlikely plan.
    Used also to declare Assets, Augmentations, Upgrades.""" ;
    rpg:definedInRuleSet cbrpnk:CBRplusPNK .

cbrpnk:Overload
    a rpg:State ;
    rpg:name "Overload" ;
    schema:description """State when Runner marks last Stress segment. One chosen Approach becomes permanently Glitched.
    Immediate complication: taken out of action, expose team weakness, lose advantage, damage/overlook crucial element.
    While Overloaded: cannot perform actions requiring Stress. Clear by taking a Breather.""" ;
    rpg:stateDefinedInRuleSet cbrpnk:CBRplusPNK .


# =============================================================================
#  GEAR & LOAD
# =============================================================================

cbrpnk:LoadLevel
    a rpg:FictionKnob ;
    rpg:name "Load Level" ;
    schema:description "LIGHT=3 items (move freely, blend in). MEDIUM=5 items (look ready). HEAVY=7 items (loud/slow/conspicuous)." ;
    rpg:definedInRuleSet cbrpnk:CBRplusPNK .

# ---- Gear items (definition instances) ----

